    "@prisma/client": "^7.2.0",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.3",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
